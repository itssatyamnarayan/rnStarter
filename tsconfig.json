{
  "extends": "@react-native/typescript-config",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*",
    "App.tsx",
    "index.js",
    "declarations.d.ts",
    "__tests__/**/*"
  ],
  "exclude": [
    "node_modules",
    "android",
    "ios",
    "build",
    "*.config.js",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    "scripts",
    "vendor",
    ".git"
  ]
}
